#!/bin/ksh
set -e 
failed=0

workdir="$PWD"
tmpdir=$(mktemp -d -p $workdir)

port=13245
mkdir -p ${tmpdir}/www
www="${tmpdir}/www"
shellweb_cmd="${workdir}/shellweb -d $www -p $port"

test_name=${0##*/test-}

run_shellweb(){
	$shellweb_cmd &
	sleep 1
	
}

kill_shellweb() {
	pkill -u $(id -u) -f "$shellweb_cmd"
	pkill -u $(id -u) -x nc
}

cleanup() {
	rm -rf $tmpdir
}

fail() {
	for msg in "$@"; do
		failed=1
		echo "FAIL in $test_name $msg"
	done
	return 1
}

finish() {
	kill_shellweb || true
	cleanup || true
	if [ "$failed" -gt 0 ]; then
		echo "$test_name ==> FAIL"
	else
		echo "$test_name ==> OK"
	fi
}

trap 'finish' EXIT

echo "test: $test_name"
